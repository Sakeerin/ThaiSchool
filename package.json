{
  "name": "school-management",
  "version": "1.0.0",
  "private": true,
  "description": "Thai School Learning Management System (ป.1 - ม.6)",
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "db:generate": "pnpm --filter @school/database generate",
    "db:push": "pnpm --filter @school/database push",
    "db:seed": "pnpm --filter @school/database seed",
    "db:studio": "pnpm --filter @school/database studio",
    "clean": "turbo run clean && rimraf node_modules"
  },
  "devDependencies": {
    "@types/node": "^20.10.0",
    "rimraf": "^5.0.5",
    "turbo": "^2.0.0",
    "typescript": "^5.3.0"
  },
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  }
}
